<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <title>Time Table List</title>
  <meta name="viewport" content="width=device-width, initial-scale=1">

  <!-- Bootstrap & Font Awesome -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">

  <style>
    body {
      min-height: 100vh;
      display: flex;
      flex-direction: column;
    }

    .main {
      flex-grow: 1;
    }

    .sidebar {
      min-height: 100vh;
    }

    .navbar {
      background-color: white !important;
      border-bottom: 1px solid #dee2e6;
      box-shadow: none;
    }

    .row.g-0>[class^="col-"] {
      border: none !important;
    }
  </style>
</head>

<body>

  <div class="container-fluid main p-0">
    <div class="row g-0">

      <!-- Sidebar -->
      <div class="col-md-3 col-lg-2 bg-dark p-0 sidebar">
        <%- include('../layout/sidebar') %>
      </div>

      <!-- Main Content + Header -->
      <div class="col-md-9 col-lg-10 p-0">
        <%- include('../layout/header') %>

          <div class="p-4">
            <%if(user.role==="Admin" ||user.role==='SuperAdmin'){%>
              <div class="text-center">
                <button> <a href="/create-task" class="text-decoration-none">Create Task</a></button>
              </div>
              <%} %>
                <h3 class="text-primary mb-4">Task List</h3>

                <% if (message && message.length> 0) { %>
                  <div class="alert alert-info">
                    <%= message %>
                  </div>
                  <% } %>

                    <form method="GET" action="/task-list" class="d-flex mb-4" role="search">
                      <input type="text" name="query" class="form-control me-2 border border-secondary"
                        placeholder="Search by subject or class" required>
                      <button class="btn btn-outline-primary" type="submit">Search</button>
                    </form>

                    <div class="table-responsive">
                      <table class="table table-bordered table-hover table-striped align-middle">
                        <thead class="table-dark">
                          <tr>
                            <th>#</th>
                            <th>Title</th>
                            <th>Description</th>
                            <th>Priority</th>
                            <th>Status</th>
                            <th>AssignedBy</th>
                            <th>AssignedTo</th>
                            <th>Due Date</th>
                            <th>Actions</th>
                          </tr>
                        </thead>
                        <tbody>
                          <% if (entry && entry.length> 0) { %>
                            <% entry.forEach((tt, index)=> { %>
                              <tr>
                                <td>
                                  <%= index + 1 %>
                                </td>
                                <td>
                                  <%= tt.title %>
                                </td>
                                <td>
                                  <%= tt.description %>
                                </td>
                                <td>
                                  <%= tt.priority %>
                                </td>
                                <td>
                                  <%= tt.status %>
                                </td>
                                <td>
                                  <%= tt.assignedBy ?tt.assignedBy.name : "N/A" %>
                                </td>
                                <td>
                                  <%= tt.assignedTo ? tt.assignedTo.name: "N/A" %>
                                </td>
                                <td>
                                  <%= tt.dueDate ? tt.dueDate.toDateString() : "N/A" %>
                                </td>
                                <td>
                                  <div class="d-flex gap-2">
                                    <% if (user.role==="SuperAdmin" || user.role==="Admin" ) { %>
                                      <!-- Edit -->
                                      <a href="/task/edit/<%= tt._id %>" class="btn btn-sm btn-warning">
                                        <i class="fas fa-edit"></i> Edit
                                      </a>

                                      <!-- Delete -->
                                      <form action="/delete/task/<%= tt._id %>?_method=delete" method="POST"
                                        class="d-inline">
                                        <button type="submit" class="btn btn-sm btn-danger"
                                          onclick="return confirm('Are you sure?')">
                                          <i class="fas fa-trash-alt"></i> Delete
                                        </button>
                                      </form>
                                      <% } %>

                                        <% if (user.role==="Manager" ) { %>
                                          <% if (!tt.assignedBy) { %>
                                            <!-- Task not assigned yet → all managers can assign -->
                                            <form action="/assign/task/<%= tt._id %>" method="GET">
                                              <button type="submit" class="btn btn-sm btn-primary">
                                                <i class="fas fa-user-plus"></i> Assign
                                              </button>
                                            </form>
                                            <% } else if (String(tt.assignedBy._id)===String(user._id)) { %>
                                              <!-- Task already assigned → only owner manager can reassign -->
                                              <form action="/assign/task/<%= tt._id %>" method="GET">
                                                <button type="submit" class="btn btn-sm btn-warning">
                                                  <i class="fas fa-user-edit"></i> Reassign
                                                </button>
                                              </form>
                                              <% } else { %>
                                                <!-- Task assigned by another manager → disable button -->
                                                <button class="btn btn-sm btn-secondary" disabled>
                                                  <i class="fas fa-lock"></i> Assigned
                                                </button>
                                                <% } %>
                                            <% } %>

                                                    <% if(user.role==='Employee' ){%>
                                                      <!-- update status -->
                                                      <form action="/emp-editStatus/<%= tt._id %>?_method=PATCH"
                                                        method="POST">
                                                        <select name="status" class="form-select">
                                                          <option value="Pending" <%=tt.status==="Pending" ? "selected"
                                                            : "" %>
                                                            >Pending</option>
                                                          <option value="In Progress" <%=tt.status==="In Progress"
                                                            ? "selected" : "" %>>In Progress</option>
                                                          <option value="Completed" <%=tt.status==="Completed"
                                                            ? "selected" : "" %>>Completed</option>
                                                        </select>
                                                        <button type="submit" class="btn btn-sm btn-success mt-2">Update
                                                          Status</button>
                                                      </form>

                                                      <% } %>



                                  </div>
                                </td>
                              </tr>
                              <% }) %>
                                <% } else { %>
                                  <tr>
                                    <td colspan="9" class="text-center text-muted">No task entries found.</td>
                                  </tr>
                                  <% } %>
                        </tbody>

                      </table>
                    </div>
          </div>

          <%- include('../layout/footer') %>
      </div>

    </div>
  </div>

  <!-- JS Scripts -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>